{
  "compilerOptions": {
    "jsx": "react-jsx", // Use "react" for older versions of React
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true, // Ensures TypeScript doesn't emit JS files
    "allowImportingTsExtensions": true // Allows importing .tsx extensions
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
